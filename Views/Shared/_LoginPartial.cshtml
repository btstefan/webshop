@if (Request.IsAuthenticated)
{
    <a href="@Url.Action("MyProfile", "Home")"><i class="far fa-user"></i> Profile</a>
    if (User.IsInRole("Admin"))
    {
        <a href="@Url.Action("Index", "Home", new { area = "Admin" })"><i class="fas fa-shield-alt"></i> Admin panel</a>
    }
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
        @Html.AntiForgeryToken()
        <a href="javascript:document.getElementById('logoutForm').submit()"><i class="fas fa-sign-out-alt"></i> Logout</a>
    }
}
else
{
    <a href="@Url.Action("Login", "Account")"><i class="fas fa-sign-in-alt"></i> Login</a>
    <a href="@Url.Action("Register", "Account")"><i class="far fa-user"></i> Register</a>
}